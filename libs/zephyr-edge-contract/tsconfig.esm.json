{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ES2020",
    "moduleResolution": "bundler",
    "rootDir": "src",
    "outDir": "dist/esm",
    "declaration": true,
    "declarationDir": "dist/types",
    "types": ["node"]
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
