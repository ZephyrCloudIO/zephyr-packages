    "@types/jest": "catalog:typescript",
    "@types/node": "catalog:typescript",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "lint-staged": "~16.2.7",
    "rimraf": "^6.1.2",
