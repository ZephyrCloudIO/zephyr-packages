{
  "name": "zephyr-ota-plugin",
  "version": "0.1.3",
  "description": "OTA (Over-The-Air) update plugin for React Native applications with Zephyr Cloud Module Federation",
  "type": "commonjs",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "nx run zephyr-ota-plugin:build",
    "patch-version": "pnpm version"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./*": "./*",
    "./package.json": "./package.json"
  },
  "author": {
    "name": "ZephyrCloudIO",
    "url": "https://github.com/ZephyrCloudIO"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.70.0",
    "@react-native-async-storage/async-storage": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "@react-native-async-storage/async-storage": {
      "optional": false
    }
  },
  "dependencies": {
    "debug": "^4.3.4",
    "zephyr-edge-contract": "workspace:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZephyrCloudIO/zephyr-packages.git",
    "directory": "libs/zephyr-ota-plugin"
  },
  "devDependencies": {
    "@module-federation/runtime": "catalog:module-federation",
    "@react-native-async-storage/async-storage": "^1.23.1",
    "@types/debug": "^4.1.12",
    "@types/jest": "catalog:typescript",
    "@types/react": "catalog:react18",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "catalog:eslint",
    "react": "^18.3.1",
    "react-native": "^0.76.0",
    "ts-jest": "catalog:typescript"
  },
  "keywords": [
    "react-native",
    "zephyr",
    "zephyr-cloud",
    "module-federation",
    "ota",
    "over-the-air",
    "updates",
    "deployment",
    "ios",
    "android",
    "micro-frontends"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
