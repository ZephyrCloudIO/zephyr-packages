{
  "name": "modern-host-app",
  "version": "0.1.0",
  "scripts": {
    "reset": "npx rimraf node_modules ./**/node_modules",
    "dev": "modern dev",
    "build": "modern build",
    "start": "modern start",
    "serve": "modern serve",
    "new": "modern new",
    "lint": "biome check",
    "format": "biome format",
    "prepare": "simple-git-hooks",
    "upgrade": "modern upgrade"
  },
  "engines": {
    "node": ">=16.18.1"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --files-ignore-unknown=true"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "dependencies": {
    "@modern-js/runtime": "2.63.6",
    "@module-federation/bridge-react": "^0.8.8",
    "@module-federation/modern-js": "^0.8.8",
    "react": "~18.3.1",
    "react-dom": "~18.3.1",
    "zephyr-modernjs-plugin": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@modern-js/app-tools": "2.63.6",
    "@modern-js/tsconfig": "2.63.6",
    "@types/jest": "~29.2.6",
    "@types/node": "~16.11.68",
    "@types/react": "~18.3.18",
    "@types/react-dom": "~18.3.5",
    "lint-staged": "~15.3.0",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "~5.7.3"
  }
}
