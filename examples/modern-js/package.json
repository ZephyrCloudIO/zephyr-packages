{
  "name": "modern-js",
  "version": "0.1.0",
  "scripts": {
    "reset": "npx rimraf node_modules ./**/node_modules",
    "dev": "modern dev",
    "build": "modern build",
    "start": "modern start",
    "serve": "modern serve",
    "new": "modern new",
    "lint": "biome check",
    "prepare": "simple-git-hooks",
    "upgrade": "modern upgrade"
  },
  "engines": {
    "node": ">=16.18.1"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --files-ignore-unknown=true"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "dependencies": {
    "@modern-js/plugin-ssg": "^2.65.5",
    "@modern-js/runtime": "^2.65.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@modern-js/app-tools": "^2.65.5",
    "@modern-js/tsconfig": "^2.65.5",
    "@types/jest": "~29.5.14",
    "@types/node": "*",
    "@types/react": "^19.0.12",
    "@types/react-dom": "~19.0.4",
    "lint-staged": "~15.5.0",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.12.1",
    "typescript": "*",
    "zephyr-modernjs-plugin": "workspace:*"
  }
}
