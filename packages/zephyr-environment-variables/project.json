{
  "name": "zephyr-environment-variables",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/zephyr-environment-variables/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "rootDir": "packages/zephyr-environment-variables/src",
        "outputPath": "packages/zephyr-environment-variables/dist",
        "main": "packages/zephyr-environment-variables/src/index.ts",
        "tsConfig": "packages/zephyr-environment-variables/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/zephyr-environment-variables/jest.config.ts"
      }
    }
  },
  "tags": []
}
