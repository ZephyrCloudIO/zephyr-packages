{
  "name": "zephyr-packages",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "scripts": {
    "bump-patch": "node scripts/bump-version.js patch",
    "bump-minor": "node scripts/bump-version.js minor",
    "bump-major": "node scripts/bump-version.js major",
    "ze-version-patch": "pnpm --filter \"./libs/**\" patch-version",
    "ze-publish": "pnpm --filter \"./libs/**\" publish --provenance --access public --no-git-checks",
    "build": "nx run-many -t build --projects=\"libs/*\"",
    "build-all": "nx run-many -t build --all",
    "build-slow": "nx run-many -t build --all --parallel=1 --verbose --skip-nx-cache",
    "lint": "nx run-many -t lint --projects=\"libs/*\"",
    "lint:examples": "nx run-many -t lint --projects=\"examples/*\"",
    "test": "nx run-many -t test --projects=\"libs/*\"",
    "test:examples": "nx run e2e-deployment:e2e-test --skip-nx-cache",
    "prepare": "husky install",
    "test:coverage": "nx run-many --target=test --projects=\"libs/*\" --code-coverage",
    "coverage:merge": "istanbul-merge --out coverage/combined-coverage.json \"coverage/**/coverage-final.json\"",
    "coverage:report": "nyc report --reporter=html --temp-directory=coverage --report-dir=coverage/combined",
    "coverage:serve": "serve coverage",
    "reset": "nx reset",
    "remove-all-node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + "
  },
  "private": true,
  "devDependencies": {
    "@nx/devkit": "21.6.4",
    "@nx/esbuild": "21.6.4",
    "@nx/eslint": "21.6.4",
    "@nx/eslint-plugin": "21.6.4",
    "@nx/jest": "21.6.4",
    "@nx/js": "21.6.4",
    "@nx/module-federation": "21.6.4",
    "@nx/nest": "21.6.4",
    "@nx/node": "21.6.4",
    "@nx/react": "21.6.4",
    "@nx/rollup": "21.6.4",
    "@nx/rspack": "21.6.4",
    "@nx/web": "21.6.4",
    "@nx/webpack": "21.6.4",
    "@nx/workspace": "21.6.4",
    "@swc-node/register": "catalog:swc",
    "@swc/cli": "catalog:swc",
    "@swc/core": "catalog:swc",
    "@swc/helpers": "catalog:swc",
    "@types/node": "catalog:typescript",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "husky": "^9.1.7",
    "jest": "30.0.5",
    "jsonc-eslint-parser": "^2.4.0",
    "nx": "21.6.4",
    "nyc": "^17.1.0",
    "prettier": "^3.5.3",
    "serve": "^14.2.5"
  },
  "dependencies": {
    "prettier-plugin-jsdoc": "^1.3.2",
    "tslib": "catalog:typescript"
  },
  "engines": {
    "node": "24.x",
    "pnpm": "10.x"
  },
  "pnpm": {
    "overrides": {
      "@rsdoctor/rspack-plugin": "catalog:rspack",
      "@rspack/core": "catalog:rspack",
      "@vercel/nft": "^0.29.2",
      "hono": "^4.2.7",
      "esbuild": "catalog:esbuild",
      "@babel/runtime": "catalog:babel",
      "@swc/helpers": "catalog:swc",
      "webpack": "catalog:webpack5",
      "vite": "catalog:vite7",
      "koa": ">=2.16.1",
      "http-proxy-middleware@>=1.3.0 <2.0.9": ">=2.0.9",
      "http-proxy-middleware@>=3.0.0 <3.0.5": ">=3.0.5",
      "webpack-dev-server@<=5.2.0": ">=5.2.2",
      "@rspack/dev-server>http-proxy-middleware": ">=3.0.5",
      "prismjs@<1.30.0": ">=1.30.0",
      "cross-spawn@>=7.0.0 <7.0.5": ">=7.0.5",
      "pbkdf2": ">=3.1.3",
      "form-data": ">=4.0.4",
      "sha.js@<=2.4.11": ">=2.4.12",
      "brace-expansion": ">=1.1.12",
      "axios@<1.12.0": ">=1.12.0"
    }
  }
}
