{
  "name": "@webpack-mf/shell",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "shell/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "shell/dist",
        "index": "shell/src/index.html",
        "baseHref": "/",
        "main": "shell/src/main.ts",
        "tsConfig": "shell/tsconfig.app.json",
        "assets": ["shell/src/favicon.ico", "shell/src/assets"],
        "styles": ["shell/src/styles.css"],
        "scripts": [],
        "webpackConfig": "shell/webpack.config.ts"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "shell/src/environments/environment.ts",
              "with": "shell/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "webpackConfig": "shell/webpack.config.prod.ts"
        }
      },
      "dependsOn": ["^build", "typecheck"]
    },
    "serve": {
      "executor": "@nx/react:module-federation-dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "@webpack-mf/shell:build",
        "hmr": true,
        "port": 4200
      },
      "configurations": {
        "development": {
          "buildTarget": "@webpack-mf/shell:build:development"
        },
        "production": {
          "buildTarget": "@webpack-mf/shell:build:production",
          "hmr": false
        }
      },
      "dependsOn": ["typecheck"]
    },
    "serve-static": {
      "executor": "@nx/react:module-federation-static-server",
      "defaultConfiguration": "production",
      "options": {
        "serveTarget": "@webpack-mf/shell:serve"
      },
      "configurations": {
        "development": {
          "serveTarget": "@webpack-mf/shell:serve:development"
        },
        "production": {
          "serveTarget": "@webpack-mf/shell:serve:production"
        }
      }
    }
  }
}
