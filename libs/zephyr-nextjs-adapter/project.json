{
  "name": "zephyr-nextjs-adapter",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/zephyr-nextjs-adapter/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "rootDir": "libs/zephyr-nextjs-adapter/src",
        "outputPath": "libs/zephyr-nextjs-adapter/dist",
        "tsConfig": "libs/zephyr-nextjs-adapter/tsconfig.lib.json",
        "main": "libs/zephyr-nextjs-adapter/src/index.ts"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs zephyr-nextjs-adapter {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "release": {
      "command": "pnpm dist-tag add zephyr-nextjs-adapter@$(npm view zephyr-nextjs-adapter@next version) latest"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/zephyr-nextjs-adapter/jest.config.ts"
      }
    }
  },
  "tags": ["type:library", "platform:nextjs", "scope:adapter"]
}
