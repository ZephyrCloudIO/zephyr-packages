{
  "name": "zephyr-edge-contract",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/zephyr-edge-contract/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build-esm": {
      "executor": "@nx/js:tsc",
      "outputs": ["{projectRoot}/dist/esm", "{projectRoot}/dist/types"],
      "options": {
        "rootDir": "libs/zephyr-edge-contract/src",
        "outputPath": "libs/zephyr-edge-contract/dist/esm",
        "main": "libs/zephyr-edge-contract/src/index.ts",
        "tsConfig": "libs/zephyr-edge-contract/tsconfig.esm.json"
      }
    },
    "build-cjs": {
      "executor": "@nx/js:tsc",
      "outputs": ["{projectRoot}/dist/cjs"],
      "options": {
        "rootDir": "libs/zephyr-edge-contract/src",
        "outputPath": "libs/zephyr-edge-contract/dist/cjs",
        "main": "libs/zephyr-edge-contract/src/index.ts",
        "tsConfig": "libs/zephyr-edge-contract/tsconfig.cjs.json"
      }
    },
    "build-package-json": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "echo '{\"type\":\"module\"}' > libs/zephyr-edge-contract/dist/esm/package.json",
          "echo '{\"type\":\"commonjs\"}' > libs/zephyr-edge-contract/dist/cjs/package.json"
        ],
        "parallel": true
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["build-esm", "build-cjs"],
      "options": {
        "commands": ["nx run zephyr-edge-contract:build-package-json"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs zephyr-edge-contract {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "release": {
      "command": "pnpm dist-tag add zephyr-edge-contract@$(npm view zephyr-edge-contract@next version) latest"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/zephyr-edge-contract/jest.config.ts"
      }
    }
  }
}
