{
  "name": "zephyr-mcp-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/zephyr-mcp-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "rootDir": "libs/zephyr-mcp-plugin/src",
        "outputPath": "libs/zephyr-mcp-plugin/dist",
        "tsConfig": "libs/zephyr-mcp-plugin/tsconfig.lib.json",
        "main": "libs/zephyr-mcp-plugin/src/index.ts"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs zephyr-mcp-plugin {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "release": {
      "command": "pnpm dist-tag add zephyr-mcp-plugin@$(npm view zephyr-mcp-plugin@next version) latest"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/zephyr-mcp-plugin/jest.config.ts"
      }
    }
  },
  "tags": []
}
